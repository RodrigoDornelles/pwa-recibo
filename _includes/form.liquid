
<div class="row">
    <form class="col s12" id="reciboForm">
        <input type="text" id="input-data" style="display:none;">
        <div class="row">
            <div class="input-field col s12 l6">
                <input id="input-nome" type="text" class="validate" required>
                <label for="input-nome">Nome</label>
                <span class="helper-text" data-error="Campo obrigatório"></span>
            </div>
            <div class="input-field col s12 l6">
                <input id="input-cpf-cnpj" type="text" class="validate" required>
                <label for="input-cpf-cnpj">CPF/CNPJ</label>
                <span class="helper-text" data-error="Campo obrigatório"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 l6">
                <input id="input-numero-recibo" type="text" class="validate" required>
                <label for="input-numero-recibo">Número do Recibo</label>
                <span class="helper-text" data-error="Campo obrigatório"></span>
            </div>
            <div class="input-field col s12 l6">
                <input id="input-valor" type="text" class="validate" required>
                <label for="input-valor">Valor R$</label>
                <span class="helper-text" data-error="Campo obrigatório"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 l6">
                <input id="input-pagador" type="text" class="validate" required>
                <label for="input-pagador">Recebi(emos) de</label>
                <span class="helper-text" data-error="Campo obrigatório"></span>
            </div>
            <div class="input-field col s12 l6">
                <input id="input-descricao" type="text" class="validate" required>
                <label for="input-descricao">Referente a</label>
                <span class="helper-text" data-error="Campo obrigatório"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Comprovante (PIX)</span>
                        <input type="file" id="input-pdf">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
